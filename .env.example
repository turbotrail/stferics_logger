############################
# Recording Configuration  #
############################
SAMPLE_RATE=44100
CHANNELS=1
OUTPUT_FOLDER=recordings

# Optional: list audio devices at start (true/false)
LIST_DEVICES_ON_START=false

# Optional: set default audio devices (indices from sounddevice)
# Leave blank to use system defaults
INPUT_DEVICE=
OUTPUT_DEVICE=

############################
# Night Window             #
############################
# Times in HH:MM (24-hour)
WINDOW_START=20:40
WINDOW_END=06:00
TOTAL_HOURS=12
SEGMENT_HOURS=1

# If set to a positive integer, records immediately for N minutes and exits
# Bypasses the night window scheduling. Leave empty to use the window schedule.
RUN_FOR_MINUTES=

############################
# Spectrogram Defaults     #
############################
SPEC_MAX_FREQ=10000
SPEC_NPERSEG=1024
SPEC_NOVERLAP=768
SPEC_BLOCK_SECONDS=5.0
SPEC_PLOW=1.0
SPEC_PHIGH=99.0
# Leave empty to auto-scale; otherwise numeric (e.g., 60)
SPEC_DB_RANGE=
SPEC_COLORMAP=inferno
